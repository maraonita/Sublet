<div class="container">
	<div class="row" >
		<div class="col-lg-6 col-lg-offset-3 profile-user-img">
			<%= construct_user_image_tag(current_user) %>
			<div class="centered">
				<h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
				<h4><%= current_user.email %></h4>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<div id="incoming_requests">
				<div class="panel panel-default">
			  		<div class="panel-heading">
						<h3 class="panel-title">My Inquiries</h3>
					</div>
					<div class="panel-body listings-panel">
						<% if !@to_confirm.empty? %>
							<% @to_confirm.each do |r| %>
								<%= render 'requests/card', request: r %>
							<% end %>
						<% else %>
							<h2>You have no inquiries!</h2>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<div id="my_posts">
				<div class="panel panel-default">
			  		<div class="panel-heading">
						<h3 class="panel-title">My Listings</h3>
					</div>
					<div class="panel-body listings-panel">
						<% if !current_user.posts.empty? %>
							<% current_user.posts.each do |p| %>
								<%= render 'posts/card', post: p %>
							<% end %>
						<% else %>
							<h2>You have no posts!</h2>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
