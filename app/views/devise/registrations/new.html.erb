<div id="titles">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-6 col-lg-offset-3">
        <h1>SIGN UP</h1>
      </div>
    </div><!-- row -->
  </div><!-- container -->
</div><!--  titleswrap -->

<div id="login">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, label: 'Email (.edu)'%>
            <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
            <%= f.input :password_confirmation %>

            <%= f.input :first_name, required: false, label: 'First Name'%>
            <%= f.input :last_name, required:false, label: 'Last name' %>
            <div class="row">
              <div class="col-lg-6">
                <%= f.label :university_id, 'University'%></br>
                <%= f.collection_select :university_id, University.order(:name), :id, :name, include_blank: false %>
              </div> 
              <div class="col-lg-6">
                <%= f.label :gender, 'Gender' %></br>
                <%= f.select :gender, ['Male', 'Female'], include_blank: false%>
              </div>
            </div>
          </div>

          <div class="form-group" id="pic">
            <%= f.label :image, 'Profile picture' %>
            <%= f.file_field :image, required: true %>
          </div>

          <div class="form-actions inline-form-button">
            <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
